<section class="w-full flex-1 border-1 border-black border-solid rounded-xl m-3 text-left min-h-56">
    <h4 class="text-lg font-bold rounded-t-xl p-3 border-b-2 border-black bg-off-white flex flex-row justify-between">

        <p>Livestock</p>
        <span class="self-center" id="add-livestock">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24"
                stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
        </span>
    </h4>
    <ul class="flex justify-between flex-wrap bg-light-green mb-2">

        <!-- User's livestocks -->
        {{#each livestock as |livestock|}}
        <li
            class="w-full border-b-1 flex justify-between p-3 font-semibold border-black md:text-sm bg-light-green text-midnight-green">
            <a href="/livestock/{{livestock.id}}"> {{ livestock.title }} </a>
            <span class="self-center delete-livestock">
                <svg xmlns="http://www.w3.org/2000/svg" id="{{livestock.id}}" class="h-5 w-5" viewBox="0 0 20 20"
                    fill="red">
                    <path id="{{livestock.id}}" fill-rule="evenodd"
                        d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z"
                        clip-rule="evenodd" />
                </svg>
            </span>
        </li>
        {{/each}}

    </ul>
</section>

<div id="add-livestock-modal"
    class="flex flex-row flex-wrap border-1 border-black border-solid rounded-xl bg-light-green w-11/12 absolute md:w-1/4 left-5 md:left-1/2 top-1/4 shadow-lg">
    <h5
        class="text-lg text-left font-bold rounded-t-xl p-3 border-b-2 border-black bg-off-white w-full flex flex-row justify-between">
        <p>Add a livestock</p>
        <span class="self-center" id="close-modal-livestock">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24"
                stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
        </span>
    </h5>
    <div class="w-half p-3">
        <form class="flex flex-row flex-wrap">
            <label for="livestock-name" class="w-full text-left">livestock Name</label>
            <input type="text" id="livestock-name" name="livestock-name"
                class="ring-1 font-semibold ring-gray-600 w-full rounded-md mt-2 px-4 py-2 outline-none focus:ring-2 focus:ring-blue-300 mb-3" />
            <label for="description" class="w-full text-left">Description</label>
            <input type="textarea" name="description" id="livestock-description"
                placeholder="Small description of the livestock"
                class="ring-1 font-semibold ring-gray-600 w-full rounded-md my-2 px-4 py-2 outline-none focus:ring-2 focus:ring-blue-300" />
            <button id="create-livestock" type="submit"
                class="justify-self-end bg-midnight-green font-bold rounded-lg px-6 py-2 my-3 uppercase text-sm text-sky-blue">Create
                livestock</button>
        </form>
    </div>
</div>

<script src="/js/add-livestock.js"></script>
<script src="/js/delete-livestock.js"></script>
<section
    class="block w-11/12 max-h-full lg:max-h-full overflow-y-scroll m-auto mx-2 my-4 text-center rounded-xl">
    <h4 class="text-3xl p-2 bg-dark-green rounded-t-xl text-off-white">
        Resources
    </h4>
    <div class="border-solid border-1 border-gray-400 bg-light-green text-midnight-green rounded-b-xl flex flex-row flex-wrap">
        {{#each posts as |post|}}
        <div class="w-full my-5 px-5 text-left">
            <a href="/post/{{post.id}}" class="text-xl ">{{post.title}}</a>
            <div>written by {{user.username}}</div>
            <div>{{format_date createdAt}}</div>

        </div>
        {{/each}}

    </div>
</section>